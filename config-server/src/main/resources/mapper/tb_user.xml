<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ocean.mapper.UserMapper">

    <resultMap id="result" type="com.ocean.domain.User">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modify" property="gmtModify" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="baseSelectSql">
        id, username, password, gmt_create, gmt_modify
    </sql>

    <!--获取用户信息-->
    <select id="queryUser" resultMap="result">
        SELECT
        <include refid="baseSelectSql"/>
        FROM tb_user where username = #{username, jdbcType=VARCHAR} and password = #{password, jdbcType=VARCHAR} limit 1
    </select>

    <!--创建用户-->
    <insert id="saveUser" parameterType="com.ocean.domain.User">
        INSERT INTO tb_user (username, password) VALUES (#{username, jdbcType=VARCHAR}, #{password, jdbcType=VARCHAR})
    </insert>

    <!--校验用户名-->
    <select id="exists" parameterType="string" resultType="java.lang.Integer">
        SELECT count(*)
        FROM tb_user
        WHERE username = #{username, jdbcType=VARCHAR}
    </select>

</mapper>